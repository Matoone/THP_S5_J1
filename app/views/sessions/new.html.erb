<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>
<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>" role="alert">
            <%= value %>
      </div>
<% end %>

<%= form_with(url: "/sessions", method: "post") do |f|%>
  <%= label_tag(:email) %>
  <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder:'email@email.com' %>
  <%= label_tag(:password, "Password:") %>
  <%= f.password_field :password, class: 'form-control' %>
  <%= submit_tag "Connect", class: 'btn btn-success' %>
<% end %>